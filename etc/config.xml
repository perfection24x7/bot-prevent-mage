<?xml version="1.0" encoding="utf-8" ?><config>        <modules>                <Perfection_PreventBot>                        <version>0.1.0</version>                </Perfection_PreventBot>        </modules>            <frontend>                <layout>            <updates>                <preventbot>                    <file>perfection_preventbot.xml</file>                </preventbot>            </updates>        </layout>    </frontend>    		    <admin>        <routers>            <preventbot>                <use>admin</use>                <args>                    <module>Perfection_PreventBot</module>                    <frontName>preventbot</frontName>                </args>            </preventbot>        </routers>    </admin>        <global>                <blocks>            <preventbot>                <class>Perfection_PreventBot_Block</class>            </preventbot>        </blocks>        <models>            <preventbot>                <class>Perfection_PreventBot_Model</class>            </preventbot>        </models>			        <helpers>            <preventbot>                <class>Perfection_PreventBot_Helper</class>            </preventbot>        </helpers>			        <resources>                        <preventbot_setup>                <setup>                    <module>Perfection_PreventBot</module>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </preventbot_setup>            <preventbot_write>                                <connection>                                        <use>core_write</use>                                </connection>                        </preventbot_write>                        <preventbot_read>                  <connection>                                        <use>core_read</use>                                </connection>                        </preventbot_read>                </resources> 			        <events>            <controller_action_predispatch_customer_account_createpost>                <observers>                    <prevent_bot_registration>                        <type>singleton</type>                        <class>Perfection_PreventBot_Model_Observer</class>                        <method>checkForBotUserRestriction</method>                    </prevent_bot_registration>                </observers>            </controller_action_predispatch_customer_account_createpost>				        </events>    </global>    <adminhtml>        <layout>            <updates>                <preventbot>                    <file>preventbot.xml</file>                </preventbot>            </updates>        </layout>        <acl>            <resources>                <all>                    <title>Allow Everything</title>                </all>                <admin>                    <children>                        <system>                            <children>                                <config>                                    <children>                                        <preventbot translate="title" module="preventbot">                                            <title>PO Box Restriction</title>                                            <sort_order>10</sort_order>                                        </preventbot>                                    </children>                                </config>                            </children>                        </system>                    </children>                </admin>            </resources>        </acl>    </adminhtml></config>